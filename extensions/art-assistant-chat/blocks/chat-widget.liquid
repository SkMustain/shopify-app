<script>
  document.addEventListener('DOMContentLoaded', function() {
    const chatBtn = document.getElementById('art-assistant-chat-btn');
    const chatWindow = document.getElementById('art-assistant-chat-window');
    const closeBtn = document.getElementById('art-assistant-close-btn');
    const sendBtn = document.getElementById('art-assistant-send-btn');
    const input = document.getElementById('art-assistant-input');
    const messagesContainer = document.getElementById('art-assistant-messages');
    const uploadBtn = document.getElementById('art-assistant-upload-btn');
    const fileInput = document.getElementById('art-assistant-file-input');

    let selectedImage = null;

    // Toggle Chat
    chatBtn.addEventListener('click', () => {
      chatWindow.classList.toggle('hidden');
      if (!chatWindow.classList.contains('hidden') && messagesContainer.children.length <= 1) {
          showQuickActions();
      }
    });

    closeBtn.addEventListener('click', () => {
      chatWindow.classList.add('hidden');
    });

    // Image Upload
    uploadBtn.addEventListener('click', () => fileInput.click());
    
    // Preview Elements
    const previewArea = document.getElementById('art-assistant-preview-area');
    const previewImg = document.getElementById('art-assistant-preview-img');
    const clearPreviewBtn = document.getElementById('art-assistant-clear-preview');

    fileInput.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          const img = new Image();
          img.onload = function() {
              // Resize Logic
              const canvas = document.createElement('canvas');
              const ctx = canvas.getContext('2d');
              const MAX_WIDTH = 800;
              const MAX_HEIGHT = 800;
              let width = img.width;
              let height = img.height;

              if (width > height) {
                  if (width > MAX_WIDTH) {
                      height *= MAX_WIDTH / width;
                      width = MAX_WIDTH;
                  }
              } else {
                  if (height > MAX_HEIGHT) {
                      width *= MAX_HEIGHT / height;
                      height = MAX_HEIGHT;
                  }
              }
              canvas.width = width;
              canvas.height = height;
              ctx.drawImage(img, 0, 0, width, height);
              
              // Compress to JPEG 0.7
              selectedImage = canvas.toDataURL('image/jpeg', 0.7);
              
              // Show Preview
              previewImg.src = selectedImage;
              previewArea.classList.remove('hidden');
              input.placeholder = "Describe your room or send widely...";
              input.focus();
          };
          img.src = e.target.result;
        };
        reader.readAsDataURL(file);
      }
    });
    
    clearPreviewBtn.addEventListener('click', () => {
        selectedImage = null;
        fileInput.value = "";
        previewArea.classList.add('hidden');
        input.placeholder = "Type a message...";
    });

    // Send Message
    async function sendMessage(text = null) {
      const messageText = text || input.value.trim();
      if (!messageText && !selectedImage) return;

      // Add user message
      if (selectedImage) {
          addMessage({ type: 'image', content: selectedImage }, 'user');
      }
      if (messageText) {
          addMessage({ type: 'text', content: messageText }, 'user');
      }

      // Clear input
      input.value = '';
      input.placeholder = "Type a message...";
      const imageToSend = selectedImage;
      
      // Reset State
      selectedImage = null; 
      fileInput.value = ""; 
      if (previewArea) previewArea.classList.add('hidden');

      // Show typing indicator
      const typingId = addTypingIndicator();
      
      try {
        const response = await fetch('/apps/art-assistant', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ message: messageText, image: imageToSend })
        });

        if (!response.ok) {
            const errText = await response.text();
            throw new Error(`Status: ${response.status} ${errText}`);
        }

        const data = await response.json();
        removeMessage(typingId);
        
        // Handle Rich Response
        if (data.reply) addMessage({ type: 'text', content: data.reply }, 'bot');
        if (data.type === 'carousel') addCarousel(data.data);
        if (data.type === 'actions') addActions(data.data);

      } catch (error) {
        console.error('Chat error:', error);
        removeMessage(typingId);
        addMessage({ type: 'text', content: `Error: ${error.message}` }, 'bot');
      }
    }

    sendBtn.addEventListener('click', () => sendMessage());
    input.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') sendMessage();
    });

    // --- Rendering Functions ---

    function addMessage(msg, sender) {
      const div = document.createElement('div');
      div.classList.add('art-assistant-message', sender);
      
      if (msg.type === 'image') {
          const img = document.createElement('img');
          img.src = msg.content;
          img.style.maxWidth = '100%';
          img.style.borderRadius = '8px';
          div.appendChild(img);
      } else {
          div.textContent = msg.content;
      }
      
      appendAndScroll(div);
      return div.id = 'msg-' + Date.now();
    }

    function addCarousel(products) {
        const container = document.createElement('div');
        container.classList.add('art-assistant-carousel-container');
        
        products.forEach(prod => {
            // Make the whole card a clickable link
            const card = document.createElement('a');
            card.classList.add('art-assistant-product-card');
            card.href = prod.url || '#';
            card.target = '_blank';
            
            card.innerHTML = `
                <img src="${prod.image}" alt="${prod.title}">
                <div class="art-assistant-p-details">
                    <h4>${prod.title}</h4>
                    <span class="price">${prod.price}</span>
                    <!-- Button visual only -->
                    <span class="art-assistant-buy-btn">View</span>
                </div>
            `;
            container.appendChild(card);
        });

        appendAndScroll(container);
    }

    function addActions(actions) {
        const container = document.createElement('div');
        container.classList.add('art-assistant-actions-container');
        
        actions.forEach(action => {
            const btn = document.createElement('button');
            btn.classList.add('art-assistant-action-btn');
            btn.textContent = action.label;
            // Send payload as simple keyword if available, else label
            btn.onclick = () => sendMessage(action.payload || action.label);
            container.appendChild(btn);
        });

        appendAndScroll(container);
    }

    function showQuickActions() {
        addActions([
            { label: "Help me choose", payload: "help" },
            { label: "Vastu Guide", payload: "Vastu" },
            { label: "Abstract Art", payload: "Abstract" } 
        ]);
    }

    function addTypingIndicator() {
        const div = document.createElement('div');
        div.classList.add('art-assistant-message', 'bot', 'typing');
        div.textContent = '...';
        div.id = 'typing-' + Date.now();
        appendAndScroll(div);
        return div.id;
    }

    function removeMessage(id) {
        const el = document.getElementById(id);
        if (el) el.remove();
    }

    function appendAndScroll(element) {
        messagesContainer.appendChild(element);
        messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }
  });
</script>

