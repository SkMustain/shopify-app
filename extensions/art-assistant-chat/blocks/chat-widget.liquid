<script>
  document.addEventListener('DOMContentLoaded', function() {
      const overlay = document.getElementById('art-assistant-overlay');
      const container = document.getElementById('art-assistant-messages');
      const sidebar = document.getElementById('art-sidebar-grid');
      const input = document.getElementById('art-assistant-input');
      
      // State
      let selectedImage = null;
      let recognition = null;
      let isListening = false;

      // INIT SPEECH RECOGNITION
      if ('webkitSpeechRecognition' in window || 'SpeechRecognition' in window) {
          const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
          recognition = new SpeechRecognition();
          recognition.continuous = false;
          recognition.interimResults = false;
          recognition.lang = 'en-US';

          recognition.onstart = function() {
              isListening = true;
              document.getElementById('art-assistant-mic-btn').classList.add('listening');
          };

          recognition.onend = function() {
              isListening = false;
              document.getElementById('art-assistant-mic-btn').classList.remove('listening');
          };

          recognition.onresult = function(event) {
              const transcript = event.results[0][0].transcript;
              input.value = transcript;
              // Optional: Auto-send if high confidence? disable for now to let user review
              // send(); 
          };
          
          recognition.onerror = function(event) {
              console.error("Speech error", event.error);
              isListening = false;
              document.getElementById('art-assistant-mic-btn').classList.remove('listening');
          };
      } else {
          // Hide mic button if not supported
          document.getElementById('art-assistant-mic-btn').style.display = 'none';
      }

      // Mic Button Click
      const micBtn = document.createElement('button');
      micBtn.id = 'art-assistant-mic-btn';
      micBtn.className = 'art-icon-btn';
      micBtn.innerHTML = 'ðŸŽ™ï¸';
      micBtn.title = "Search by voice";
      
      // Insert before input (or after upload btn)
      const inputBar = document.querySelector('.art-input-bar');
      const uploadBtn = document.getElementById('art-assistant-upload-btn');
      inputBar.insertBefore(micBtn, document.getElementById('art-assistant-file-input').nextSibling);

      micBtn.onclick = () => {
          if (!recognition) return;
          if (isListening) {
              recognition.stop();
          } else {
              recognition.start();
          }
      };


      // Toggle
      document.getElementById('art-assistant-trigger').onclick = () => {
          overlay.classList.remove('hidden');
          if(container.children.length <= 1) showQuickActions();
      };
      
      document.getElementById('art-assistant-close-btn').onclick = () => {
          overlay.classList.add('hidden');
      };

      // Upload
      document.getElementById('art-assistant-upload-btn').onclick = () => {
          document.getElementById('art-assistant-file-input').click();
      };
      
      document.getElementById('art-assistant-file-input').onchange = (e) => {
          const file = e.target.files[0];
          if(file) {
              const reader = new FileReader();
              reader.onload = (ev) => {
                  selectedImage = ev.target.result;
                  document.getElementById('art-assistant-preview-img').src = selectedImage;
                  document.getElementById('art-assistant-preview-area').classList.remove('hidden');
              };
              reader.readAsDataURL(file);
          }
      };
      
      document.getElementById('art-assistant-clear-preview').onclick = () => {
          selectedImage = null;
          document.getElementById('art-assistant-preview-area').classList.add('hidden');
      };

      // Send
      const send = async (txt, displayLabel = null) => {
          const text = txt || input.value.trim();
          if(!text && !selectedImage) return;
          
          if(selectedImage) addMsg(selectedImage, 'user', true);
          if(text) addMsg(displayLabel || text, 'user');
          
          input.value = ''; 
          if(selectedImage) {
              document.getElementById('art-assistant-clear-preview').click();
          }

          const loader = addLoader();
          
          try {
              const res = await fetch('/apps/art-assistant', {
                  method: 'POST',
                  headers: {'Content-Type': 'application/json'},
                  body: JSON.stringify({ message: text, image: selectedImage }) 
              });
              const data = await res.json();
              loader.remove();
              
              if(data.reply) addMsg(data.reply, 'bot');
              
              if(data.type === 'carousel' && data.data && data.data.length > 0) {
                  // SPLIT LOGIC
                  const [hero, ...rest] = data.data;
                  addHeroCard(hero); // Top result in chat
                  updateSidebar(rest); // Rest in sidebar
                  addMsg("I've highlighted the top match above, and added more options to the sidebar.", 'bot');
              } else if (data.data && data.type==='actions') {
                  addActions(data.data);
              }

          } catch(e) {
              loader.remove();
              addMsg("Sorry, I encountered an error. Please try again.", 'bot');
              console.error(e);
          }
      };

      document.getElementById('art-assistant-send-btn').onclick = () => send();
      input.onkeypress = (e) => { if(e.key==='Enter') send(); };

      // Helpers
      function addMsg(content, sender, isImg=false) {
          const div = document.createElement('div');
          div.className = `art-message ${sender}`;
          if(isImg) {
              div.innerHTML = `<img src="${content}" style="max-width:240px; border-radius:12px; display:block;">`;
          } else {
              div.innerHTML = content.replace(/\*\*(.*?)\*\*/g, '<b>$1</b>').replace(/\n/g, '<br>');
          }
          container.appendChild(div);
          container.scrollTop = container.scrollHeight;
      }
      
      function addActions(items) {
          const div = document.createElement('div');
          div.className = 'actions-row';
          items.forEach(i => {
              const btn = document.createElement('div');
              btn.className = 'action-pill';
              btn.innerText = i.label;
              btn.onclick = () => send(i.payload || i.label, i.label);
              div.appendChild(btn);
          });
          container.appendChild(div);
          container.scrollTop = container.scrollHeight;
      }
      
      function showQuickActions() {
          addActions([
            { label: "Living Room", payload: "flow_room:Living Room" },
            { label: "Bedroom", payload: "flow_room:Bedroom" },
            { label: "Visual Search", payload: "visual search" }
          ]);
      }
      
      function addLoader() {
          const div = document.createElement('div');
          div.className = 'art-message bot';
          div.innerHTML = '<span style="opacity:0.6; font-style:italic;">Thinking...</span>';
          container.appendChild(div);
          return div;
      }
      
      function addHeroCard(p) {
          // A more robust structure for the hero card
          const a = document.createElement('a');
          a.className = 'art-hero-card';
          a.href = p.url; a.target = "_blank";
          
          a.innerHTML = `
             <div class="art-hero-inner">
                 <div class="art-hero-img-wrapper">
                    <img src="${p.image}">
                 </div>
                 <div class="art-hero-content">
                     <span class="art-hero-tag">Best Match</span>
                     <h4 class="art-hero-title">${p.title}</h4>
                     <div class="art-hero-price">View Details</div>
                     <button class="art-action-btn">View Product</button>
                 </div>
             </div>
          `;
          container.appendChild(a);
          container.scrollTop = container.scrollHeight;
      }
      
      function updateSidebar(list) {
          sidebar.innerHTML = '';
          if(!list.length) return;
          list.forEach(p => {
              const div = document.createElement('div');
              div.className = 'art-sidebar-card';
              div.onclick = () => window.open(p.url, '_blank');
              div.innerHTML = `
                  <img src="${p.image}">
                  <div class="art-sidebar-info">
                      <div>
                          <div class="art-sidebar-vendor">Featured</div>
                          <div class="art-sidebar-title">${p.title}</div>
                      </div>
                      <button class="art-view-btn">View</button>
                  </div>
              `;
              sidebar.appendChild(div);
          });
      }
  });
</script>

